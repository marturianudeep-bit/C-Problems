#include<stdio.h>
int main(){
    int ConnectionType,units;
    int bill = 0;

    scanf("%d",&ConnectionType);
    scanf("%d",&units);

    switch (ConnectionType){
        case 1:
        if(units <= 100){
            bill = units * 3;
        }else{
            bill = (100 * 3) + ((units - 100) * 5);
        }
          bill -= 80;
          if (bill < 0){
            bill = 0;
          }
          break;
         case 2:
            if(units <= 100){
                bill = units * 7;
            } else {
                bill = (100 * 7) + ((units - 100) * 10);
            }
            break;
             
             default: 
              printf("Invalid COnnectionType");

              return 0;
    }
     printf("Bill â‚¹%d\n",bill);
}
 
