#include<stdio.h>
int main(){
    int deliveryMode;
    int charge;

    scanf("%d",&deliveryMode);

    switch(deliveryMode){
        case 1:
          charge = 40;
           break;
           
           case 2:
            charge = 120;
            break;
            
            case 3:
              charge = 0;
              break;
              
              default:
               charge = 0;
    }
    printf("delivery charge â‚¹%d",charge);

    return 0;
}
