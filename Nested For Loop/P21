#include <stdio.h>

int main() {
    int n = 4;   
    int i, j;

    for(i = 1; i <= 2*n-1; i++) {
        for(j = 1; j <= 2*n-1; j++) {
            
            int min = i;
            
            if(j < min)
                min = j;
            if((2*n - i) < min)
                min = 2*n - i;
            if((2*n - j) < min)
                min = 2*n - j;

            printf("%d ", n - min + 1);
        }
        printf("\n");
    }

    return 0;
}
