#include<stdio.h>
int main(){
    int N;
    printf("Enter number of days: ");
    scanf("%d",&N);

    int arr[N];
    int i = 0;

    printf("Enter %d values (1 = working, 0 = failed):\n",N);

    while(i < N){
        scanf("%d",&arr[i]);
        i++;
    }
    int currentStreak = 0;
    int maxStreak = 0;
    i = 0;
    while(i < N){
        if(arr[i] == 0){
            currentStreak++;
            if(currentStreak > maxStreak){
                maxStreak = currentStreak;
            }
        }else{
            currentStreak = 0;
        }
        i++;
    }
    printf("Longest Failure Streak: %d\n",maxStreak);

    return 0;

}
